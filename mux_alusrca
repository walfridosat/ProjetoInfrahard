module aluSrcAMUX(
    input wire alusrca,
    input wire [31:0] pc,
    input wire [31:0] a,
    output reg [31:0] out
);

    always @(*) begin
        case (alusrca)
            1'b0: 
                out = pc;
            1'b1:
                out = a;
            default:
                out = 32'b00000000000000000000000000000000; // Valor padr√£o
        endcase
    end

endmodule